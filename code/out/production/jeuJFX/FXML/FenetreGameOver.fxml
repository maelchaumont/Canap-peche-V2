            prefHeight="400.0" prefWidth="600.0"
            fx:id="bigBorderPane">

    <center>
        <VBox styleClass="contentCenteredp10">
            <ImageView fx:id="imgViewGameOver" fitWidth="300" preserveRatio="true"/>
            <VBox styleClass="contentCenteredp25">
                <Button fx:id="btnReplay" styleClass="aliceblueText25">Rejouer !</Button>
                <Button fx:id="btnBackToAccueil" styleClass="aliceblueText25">Retour Ã  l'Accueil</Button>
                <HBox styleClass="contentCentered">
                    <Text styleClass="goldenText">Votre score :</Text>
