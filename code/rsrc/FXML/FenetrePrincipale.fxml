<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="bigBorderPane">

    <top>
        <HBox fx:id="topHBox" styleClass="contentCentered">
            <Text>Temps restant : </Text>
            <Text fx:id="timeDisplay" style="fx-padding:10px;"> </Text>
            <Text> secondes</Text>
        </HBox>
    </top>

    <center>
        <HBox>
            <VBox fx:id="stats" styleClass="contentCentered">
                <HBox>
                    <Text>Pseudo : </Text>
                    <Text fx:id="statsPseudo" styleClass="boldText"> </Text>
                </HBox>
                <HBox>
                    <Text>Score : </Text>
                    <Text fx:id="statsScore" styleClass="boldText"> </Text>
                </HBox>
            </VBox>

            <ImageView fx:id="imgView1"> </ImageView>
        </HBox>
    </center>

</BorderPane>
